<Page x:Class="CourseWork4Test.Pages.DBTables.Client"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork4Test.Pages.DBTables"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1280" Title="Client">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" FontSize="28" Margin="10">Таблица клиентов - Client</Label>
        <DataGrid x:Name="DataGridClient" Grid.Row="1" CanUserAddRows="False" AutoGeneratedColumns="DataGridClient_AutoGeneratedColumns" SelectionChanged="DataGridClient_Selected"></DataGrid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="25 5 0 0">
                <StackPanel Orientation="Horizontal">
                    <Label FontSize="18" Margin=" 0 0 10 0">Фамилия:</Label>
                    <TextBox x:Name="SurnameTB" FontSize="18" VerticalAlignment="Center" Width="635"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label FontSize="18" Margin=" 0 0 10 0">Имя:</Label>
                    <TextBox x:Name="NameTB" FontSize="18" VerticalAlignment="Center" Width="674"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label FontSize="18" Margin=" 0 0 10 0">Отчество:</Label>
                    <TextBox x:Name="PatronymicTB" FontSize="18" VerticalAlignment="Center" Width="633"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label FontSize="18" Margin=" 0 0 10 0">Адрес (ID):</Label>
                    <TextBox x:Name="AddressIDTB" FontSize="18" VerticalAlignment="Center" Width="626"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label FontSize="18" Margin=" 0 0 10 0">Номер телефона:</Label>
                    <xctk:MaskedTextBox FontSize="18" x:Name="TelNumTB" Mask="+7 (000) 000-00-00" Width="570" Height="26"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label FontSize="18" Margin=" 0 0 10 0">Статус клиента (1 - Обычный, 2 - Постоянный, 3 - Нарушитель):</Label>
                    <TextBox x:Name="ClientStatusTB" FontSize="18" VerticalAlignment="Center" Width="189"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10" >
                <Button x:Name="NewRecordBtn" FontSize="18" Margin="3" Click="NewRecordBtn_Click">Новая запись</Button>
                <Button x:Name="DeleteRecordBtn" FontSize="18" Margin="3" Click="DeleteRecordBtn_Click">Удаление</Button>
                <Button x:Name="SaveTableBtn" FontSize="18" Margin="3" Click="SaveTableBtn_Click" ToolTip="Сохраняет только выделенный элемент в таблице!" IsEnabled="False">Сохранение</Button>
                <Button x:Name="UpdateBtn" FontSize="18" Margin="3 3 3 40" Click="UpdateBtn_Click">Принудительно обновить</Button>

                <Button x:Name="GoBackBtn" Click="GoBackBtn_Click" FontSize="18">Назад</Button>
            </StackPanel>

        </Grid>
    </Grid>
</Page>
